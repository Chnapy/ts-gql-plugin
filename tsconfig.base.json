{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "checkJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,

    "module": "commonjs",
    "lib": ["ESNext", "dom"]
  }
}
